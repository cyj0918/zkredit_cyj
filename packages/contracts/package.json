{
  "name": "@zkredit/contracts",
  "version": "1.0.0",
  "description": "ZKredit Smart Contracts - Solidity contracts for ZK credit verification and ERC-8004 registry",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "hardhat compile",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:unit": "hardhat test test/**/*.test.ts",
    "test:integration": "hardhat test test/integration/**/*.test.ts",
    "deploy:local": "hardhat run script/deploy-local.ts --network localhost",
    "deploy:testnet": "hardhat run script/deploy-testnet.ts --network sepolia",
    "deploy:mainnet": "hardhat run script/deploy-mainnet.ts --network mainnet",
    "verify:testnet": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network mainnet",
    "console": "hardhat console",
    "node": "hardhat node",
    "flatten": "hardhat flatten > dist/flattened.sol",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true hardhat test",
    "clean": "hardhat clean && rm -rf dist"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "solidity-coverage": "^0.8.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-foundry": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=16.0.0",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.17.0",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.8",
    "snarkjs": "^0.7.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "files": [
    "dist/**/*",
    "contracts/**/*",
    "artifacts/**/*",
    "deployments/**/*"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "zk-circuits",
    "zk-proofs",
    "credit-verification",
    "remittance",
    "smart-contracts",
    "hardhat",
    "foundry"
  ],
  "license": "MIT"
}
