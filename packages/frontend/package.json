{
  "name": "@zkredit/frontend",
  "version": "1.0.0",
  "description": "ZKredit Frontend - Next.js web application for ZK credit and remittance services",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest --watch",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "export": "next export",
    "analyze": "ANALYZE=true next build",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "docs:build": "typedoc src/**/*.ts",
    "ci:test": "jest --ci --watchAll=false --coverage",
    "ci:build": "next build --no-lint"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0",
    "@vercel/analytics": "^1.0.1",
    "@vercel/speed-insights": "^1.0.0",
    "axios": "^1.4.0",
    "chart.js": "^4.3.0",
    "clsx": "^2.0.0",
    "ethers": "^6.4.0",
    "framer-motion": "^10.12.18",
    "lucide-react": "^0.263.0",
    "next": "^13.5.0",
    "next-themes": "^0.2.1",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.1",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.10.1",
    "react-query": "^3.39.3",
    "snarkjs": "^0.7.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "zod": "^3.21.4",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-config-next": "13.5.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.3",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": ["**/__tests__/**/*.{js,jsx,ts,tsx}", "**/?(*.)+(spec|test).{js,jsx,ts,tsx}"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
